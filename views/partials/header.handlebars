{{#if showHeader}}
  <header>
    <nav class="custom-navbar">
      <div class="custom-container">
        <a class="custom-logo" href="#">Pastelería Delicias</a>
        <button
          class="custom-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#customNavbarNavAltMarkup"
          aria-controls="customNavbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="custom-toggler-icon"></span>
        </button>
        <div class="collapse custom-navbar-collapse" id="customNavbarNavAltMarkup">
          <div class="d-flex justify-content-between w-100">
            <div class="custom-nav">
              <a class="custom-nav-link" href="../home.handlebars">Inicio</a>
              <a class="custom-nav-link" href="../products.handlebars">Productos</a>
            </div>
            <div class="d-flex align-items-center">
              {{#if user}}
                <div class="custom-dropdown">
                  <button class="custom-dropdown-toggle btn btn-sm no-border" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    ¡Hola, {{user.name}}!
                  </button>
                  <ul class="custom-dropdown-menu">
                    <li><a class="btn custom-dropdown-item text-center mb-2 btn-sm" href="../profile.handlebars">Mi perfil</a></li>
                    {{#if user.admin}}
                      <li><a class="btn custom-dropdown-item text-center mb-2 btn-sm" href="../dashboard.handlebars">Gestionar</a></li>
                    {{/if}}
                    <li>
                      <form class="btn d-flex justify-content-center align-items-center mb-2 btn-sm custom-logout-form" action="/logout" method="POST">
                        <button type="submit" class="btn btn-danger btn-sm">Cerrar sesión</button>
                      </form>
                    </li>
                  </ul>
                </div>
              {{else}}
                <a href="../register.handlebars" class="btn btn-secondary mx-2 btn-sm">Registrarse</a>
                <a href="../login.handlebars" class="btn btn-primary btn-sm">Iniciar Sesión</a>
              {{/if}}
              <a href="../cart.handlebars" class="mx-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gray" class="bi bi-cart-fill" viewBox="0 0 16 16">
                  <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </header>
{{/if}}
